<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pngtree"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/result"
        android:layout_width="282dp"
        android:layout_height="49dp"
        android:layout_marginBottom="488dp"
        android:backgroundTint="#F3EFEF"
        android:text="ANSWER:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4EB89A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/num1"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:background="@drawable/styles"
        android:ems="10"
        android:hint="Enter First number"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColor="#FA090909"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/num2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.786" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/styles"
        android:ems="10"
        android:hint="Enter Second number"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="138dp"
        android:layout_height="124dp"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic" />

    <Button
        android:id="@+id/dividebtn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="292dp"
        android:backgroundTint="#C8CF80"
        android:text="DIVIDE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/addbtn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#E91E63"
        android:text="ADD"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/multibtn"
        app:layout_constraintEnd_toStartOf="@+id/subsbtn"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/subsbtn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#DFE815E8"
        android:text="SUBS"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dividebtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/multibtn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginBottom="292dp"
        android:backgroundTint="#2196F3"
        android:text="MULTI"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dividebtn"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="242dp"
        android:layout_height="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/ess" />


</androidx.constraintlayout.widget.ConstraintLayout>